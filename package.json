{
  "name": "shrimp-tech",
  "version": "1.0.0",
  "description": "SHRIMP TECH - Hệ thống IoT thông minh cho nuôi tôm",
  "main": "public/index.html",
  "scripts": {
    "start": "node server.js",
    "build": "npm install --prefix netlify/functions && npm install --prefix public/api",
    "test": "echo 'No tests specified'",
    "dev:email": "cd public/api && node email-server.js",
    "dev:web": "cd public/api && node web-server.js",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "railway up"
  },
  "keywords": [
    "iot",
    "aquaculture",
    "shrimp",
    "smart-farming",
    "sensors"
  ],
  "author": "SHRIMP TECH Team - VHU & HUTECH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shrimptech/shrimptech-iot"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.8",
    "dotenv": "^16.3.1"
  }
}
