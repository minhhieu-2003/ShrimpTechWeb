# SHRIMPTECH Production Environment Configuration
# Copy this file to .env and fill in your actual values

# =========================
# GMAIL SMTP CONFIGURATION
# =========================
# You need to enable 2FA and create App Password
# https://support.google.com/accounts/answer/185833
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-char-app-password-here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Backup variables (for compatibility)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password-here

# =========================
# PRODUCTION CONFIG
# =========================
ADMIN_EMAIL=your-email@gmail.com
SMTP_FROM_EMAIL=your-email@gmail.com

NODE_ENV=production
PORT=3001

# Cors Origins - Production domains only
CORS_ORIGINS=https://shrimptech.vn,https://www.shrimptech.vn,https://shrimptech-c6e93.web.app

# Security for Production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
